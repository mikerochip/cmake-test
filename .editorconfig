# EditorConfig is awesome: https://EditorConfig.org

root = true

# Defaults
[*]
end_of_line = lf
insert_final_newline = true

# Source files
[*.{cs,js,py}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{c++,cc,cpp,cxx,h,h++,hh,hpp,hxx,inl,ipp,tlh,tli}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2

# Build meta files
[Makefile]
indent_style = tab

[CMakeLists.txt]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

# VS project files
[*.{sln,csproj,fsproj,vbproj,vcxproj,vcproj,dbproj}]
end_of_line = crlf
[*.{lsproj,wixproj,modelproj,sqlproj,wmaproj,xproj}]
end_of_line = crlf
[*.{booproj,unityproj,props,filters,vcxitems}]
end_of_line = crlf
